@functions
{ string IsActive(string Controller, string Action = "Index") =>
                Equals(ViewContext.RouteData.Values["controller"], Controller) &&
                Equals(ViewContext.RouteData.Values["action"], Action)
                    ? "active"
                    : null; 
}